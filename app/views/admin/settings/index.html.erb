<h1>I'm the admin settings index page and I set perferences for sorting </h1>

<%= form_for @preference, url: admin_settings_path(@preference), method: :patch do |f| %>

  <h3><%= f.label :song_sort_order %></h3>
  <p>Descending<%= f.radio_button :song_sort_order, "DESC" %>
  Ascending<%= f.radio_button :song_sort_order, "ASC" %><p>

  <h3><%= f.label :artist_sort_order %></h3>
  <p>Descending<%= f.radio_button :artist_sort_order, "DESC" %>
   Ascending<%= f.radio_button :artist_sort_order, "ASC" %></p>

  <%= f.submit %>

<% end %>